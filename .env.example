APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=sqlite

# Simpaisa API Configuration
SIMPaisa_BASE_URL=https://sandbox.simpaisa.com
SIMPaisa_API_KEY=
SIMPaisa_MERCHANT_ID=
SIMPaisa_TIMEOUT=30

# RSA Digital Signature Keys (Paths relative to storage/app or absolute paths)
SIMPaisa_RSA_PRIVATE_KEY_PATH=storage/app/keys/merchant_private_key.pem
SIMPaisa_RSA_PUBLIC_KEY_PATH=storage/app/keys/merchant_public_key.pem
SIMPaisa_RSA_SIMPaisa_PUBLIC_KEY_PATH=storage/app/keys/simpaisa_public_key.pem

# SSL/TLS Certificates (Paths relative to storage/app or absolute paths)
SIMPaisa_SSL_CLIENT_CERT_PATH=storage/app/ssl/client_cert.pem
SIMPaisa_SSL_CLIENT_KEY_PATH=storage/app/ssl/client_key.pem
SIMPaisa_SSL_CA_CERT_PATH=storage/app/ssl/ca_cert.pem